options {
    directory "/var/cache/bind";

    listen-on port 53 { any; };
    listen-on-v6 { none; };

    allow-query { localhost; 10.0.0.0/24; };
    allow-recursion { localhost; 10.0.0.0/24; };

    recursion yes;

    allow-transfer { none; };

    forwarders {
        8.8.8.8;
        8.8.4.4;
        1.1.1.1;
    };

    dnssec-validation auto;

    version "not disclosed";
};
