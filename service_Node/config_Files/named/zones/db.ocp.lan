$TTL    604800
@       IN      SOA     svc.ocp.lan. contact.ocp.lan. (
                  2     ; Serial
             604800     ; Refresh
              86400     ; Retry
            2419200     ; Expire
             604800 )   ; Minimum

        IN      NS      svc.ocp.lan.

; --- Service Node ---
svc.ocp.lan.         IN      A       10.0.0.1
svc                  IN      A       10.0.0.1

; Temp Bootstrap Node
ocp-bootstrap.ocp.lan.        IN      A      10.0.0.200
ocp-bootstrap                 IN      A      10.0.0.200

; --- Bastion Node ---
bastion.ocp.lan.     IN      A       10.0.0.100
bastion              IN      A       10.0.0.100

; --- Control Plane Nodes ---
ocp-cp-1.ocp.lan.    IN      A      10.0.0.211
ocp-cp-1             IN      A      10.0.0.211

ocp-cp-2.ocp.lan.    IN      A      10.0.0.212
ocp-cp-2             IN      A      10.0.0.212

ocp-cp-3.ocp.lan.    IN      A      10.0.0.213
ocp-cp-3             IN      A      10.0.0.213


; --- OpenShift Internal - Load Balancer (on svc-1) ---
api.ocp.lan.        IN    A    10.0.0.1
api-int.ocp.lan.    IN    A    10.0.0.1
*.apps.ocp.lan.     IN    A    10.0.0.1

